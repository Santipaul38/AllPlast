<div id="<%= dom_id category %>">

  <% if action_name != "show" %>

    <tr class = "render-rows">
        <td><%= category.name %></td>

        <td>
        <div class="btn-group place-content-end">
          <%= link_to "Ver", category, class: "btn" %>
          <%= link_to 'Editar', edit_category_path(category), class: "btn" %>
          <%= link_to '× Eliminar categoría ×', category, method: :delete, class: "btn hover:bg-red-500" %>
        </div> 
        <td>   
    </tr>

  <% else %>

    <p class="my-5">
      <strong class="block font-medium mb-1">Nombre:</strong>
      <%= category.name %>
    </p>

  <% end %>
</div>
