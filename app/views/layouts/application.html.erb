            <%= link_to 'Facturas', bills_path, class: "block py-2 pr-4 pl-3 text-gray-200 hover:text-white hover:bg-transparent md:hover:bg-transparent md:p-0 dark:text-gray-400 md:dark:hover:text-white"%> 
          <% end %>

          <% if controller_name == 'price_lists' %>
