            <%= link_to 'Price lists', price_lists_path, class: "block py-2 pr-4 pl-3 text-gray-700 hover:text-white hover:bg-transparent md:hover:bg-transparent md:p-0 dark:text-gray-400 md:dark:hover:text-white"%> 
          <% end %>
          
          <% if controller_name == 'sale_details' %>
            <%= link_to 'Sale details', sale_details_path, class: "block py-2 pr-4 pl-3 text-gray-900 border-b border-gray-100 md:hover:bg-transparent md:border-0 md:hover:text-blue-700 md:p-0 dark:text-gray-50 md:dark:hover:text-white dark:hover:text-white md:dark:hover:bg-transparent dark:border-gray-700"%>
