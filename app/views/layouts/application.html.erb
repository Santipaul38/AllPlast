        <ul class="lg:flex justify-center md:space-x-8 w-full">

          <% if controller_name == 'products' %>
            <%= link_to 'Productos', products_path, class: "block py-2 pr-4 pl-3 font-bold text-white border-b border-gray-100 md:hover:bg-transparent md:border-0 md:hover:text-blue-700 md:p-0 dark:text-gray-50 md:dark:hover:text-white dark:hover:text-white md:dark:hover:bg-transparent dark:border-gray-700"%>
          <% else %>
            <%= link_to 'Productos', products_path, class: "block py-2 pr-4 pl-3 text-gray-200 hover:text-white hover:bg-transparent md:hover:bg-transparent md:p-0 dark:text-gray-400 md:dark:hover:text-white"%> 
          <% end %>

          <% if controller_name == 'categories' %>
            <%= link_to 'Categorias', categories_path, class: "block py-2 pr-4 pl-3 font-bold text-white border-b border-gray-100 md:hover:bg-transparent md:border-0 md:hover:text-blue-700 md:p-0 dark:text-gray-50 md:dark:hover:text-white dark:hover:text-white md:dark:hover:bg-transparent dark:border-gray-700"%>
          <% else %>
            <%= link_to 'Categorias', categories_path, class: "block py-2 pr-4 pl-3 text-gray-200 hover:text-white hover:bg-transparent md:hover:bg-transparent md:p-0 dark:text-gray-400 md:dark:hover:text-white"%> 
          <% end %>

          <% if controller_name == 'clients' %>
            <%= link_to 'Clientes', clients_path, class: "block py-2 pr-4 pl-3 font-bold text-white text-gwhiteborder-b border-gray-100 md:hover:bg-transparent md:border-0 md:hover:text-blue-700 md:p-0 dark:text-gray-50 md:dark:hover:text-white dark:hover:text-white md:dark:hover:bg-transparent dark:border-gray-700"%>
          <% else %>
            <%= link_to 'Clientes', clients_path, class: "block py-2 pr-4 pl-3 text-gray-200 hover:text-white hover:bg-transparent md:hover:bg-transparent md:p-0 dark:text-gray-400 md:dark:hover:text-white"%> 
          <% end %>

          <% if controller_name == 'sales' %>
            <%= link_to 'Ventas', sales_path, class: "block py-2 pr-4 pl-3 font-bold text-white text-gwhiteborder-b border-gray-100 md:hover:bg-transparent md:border-0 md:hover:text-blue-700 md:p-0 dark:text-gray-50 md:dark:hover:text-white dark:hover:text-white md:dark:hover:bg-transparent dark:border-gray-700"%>
          <% else %>
            <%= link_to 'Ventas', sales_path, class: "block py-2 pr-4 pl-3 text-gray-200 hover:text-white hover:bg-transparent md:hover:bg-transparent md:p-0 dark:text-gray-400 md:dark:hover:text-white"%> 
          <% end %>

          <% if controller_name == 'bills' %>
            <%= link_to 'Facturas', bills_path, class: "block py-2 pr-4 pl-3 font-bold text-white text-gwhiteborder-b border-gray-100 md:hover:bg-transparent md:border-0 md:hover:text-blue-700 md:p-0 dark:text-gray-50 md:dark:hover:text-white dark:hover:text-white md:dark:hover:bg-transparent dark:border-gray-700"%>
