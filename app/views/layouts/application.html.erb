            <%= link_to 'Sale details', sale_details_path, class: "block py-2 pr-4 pl-3 text-gray-700 hover:text-white hover:bg-transparent md:hover:bg-transparent md:p-0 dark:text-gray-400 md:dark:hover:text-white"%> 
          <% end %>

