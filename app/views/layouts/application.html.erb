<!DOCTYPE html>
<html>
  <head>
    <title>AllPlast</title>

    <%= render "layouts/navbar" %> 

    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= stylesheet_link_tag "tailwind", "inter-font", "data-turbo-track": "reload" %>

    <div class = "navcontainer">
      <nav class="bg-white border-gray-200 px-2 sm:px-4 py-2.5 dark:bg-gray-900">
        <ul class="flex justify-center md:space-x-8 ">

          <% if controller_name == 'products' %>
            <%= link_to 'Products', products_path, class: "block py-2 pr-4 pl-3 text-gray-900 border-b border-gray-100 md:hover:bg-transparent md:border-0 md:hover:text-blue-700 md:p-0 dark:text-gray-50 md:dark:hover:text-white dark:hover:text-white md:dark:hover:bg-transparent dark:border-gray-700"%>
          <% else %>
            <%= link_to 'Products', products_path, class: "block py-2 pr-4 pl-3 text-gray-700 hover:text-white hover:bg-transparent md:hover:bg-transparent md:p-0 dark:text-gray-400 md:dark:hover:text-white"%> 
          <% end %>

          <% if controller_name == 'categories' %>
            <%= link_to 'Categories', categories_path, class: "block py-2 pr-4 pl-3 text-gray-900 border-b border-gray-100 md:hover:bg-transparent md:border-0 md:hover:text-blue-700 md:p-0 dark:text-gray-50 md:dark:hover:text-white dark:hover:text-white md:dark:hover:bg-transparent dark:border-gray-700"%>
          <% else %>
            <%= link_to 'Categories', categories_path, class: "block py-2 pr-4 pl-3 text-gray-700 hover:text-white hover:bg-transparent md:hover:bg-transparent md:p-0 dark:text-gray-400 md:dark:hover:text-white"%> 
          <% end %>

          <% if controller_name == 'clients' %>
            <%= link_to 'Clients', clients_path, class: "block py-2 pr-4 pl-3 text-gray-900 border-b border-gray-100 md:hover:bg-transparent md:border-0 md:hover:text-blue-700 md:p-0 dark:text-gray-50 md:dark:hover:text-white dark:hover:text-white md:dark:hover:bg-transparent dark:border-gray-700"%>
          <% else %>
            <%= link_to 'Clients', clients_path, class: "block py-2 pr-4 pl-3 text-gray-700 hover:text-white hover:bg-transparent md:hover:bg-transparent md:p-0 dark:text-gray-400 md:dark:hover:text-white"%> 
          <% end %>

          <% if controller_name == 'sales' %>
            <%= link_to 'Sales', sales_path, class: "block py-2 pr-4 pl-3 text-gray-900 border-b border-gray-100 md:hover:bg-transparent md:border-0 md:hover:text-blue-700 md:p-0 dark:text-gray-50 md:dark:hover:text-white dark:hover:text-white md:dark:hover:bg-transparent dark:border-gray-700"%>
          <% else %>
            <%= link_to 'Sales', sales_path, class: "block py-2 pr-4 pl-3 text-gray-700 hover:text-white hover:bg-transparent md:hover:bg-transparent md:p-0 dark:text-gray-400 md:dark:hover:text-white"%> 
          <% end %>

          <% if controller_name == 'bills' %>
            <%= link_to 'Bills', bills_path, class: "block py-2 pr-4 pl-3 text-gray-900 border-b border-gray-100 md:hover:bg-transparent md:border-0 md:hover:text-blue-700 md:p-0 dark:text-gray-50 md:dark:hover:text-white dark:hover:text-white md:dark:hover:bg-transparent dark:border-gray-700"%>
          <% else %>
            <%= link_to 'Bills', bills_path, class: "block py-2 pr-4 pl-3 text-gray-700 hover:text-white hover:bg-transparent md:hover:bg-transparent md:p-0 dark:text-gray-400 md:dark:hover:text-white"%> 
          <% end %>

          <% if controller_name == 'price_lists' %>
            <%= link_to 'Price lists', price_lists_path, class: "block py-2 pr-4 pl-3 text-gray-900 border-b border-gray-100 md:hover:bg-transparent md:border-0 md:hover:text-blue-700 md:p-0 dark:text-gray-50 md:dark:hover:text-white dark:hover:text-white md:dark:hover:bg-transparent dark:border-gray-700"%>
