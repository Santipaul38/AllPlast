<div id="<%= dom_id price_list %>">
  <p class="my-5">
    <strong class="block font-medium mb-1">Date:</strong>
    <%= price_list.date %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Percentage:</strong>
    <%= price_list.percentage %>
  </p>

  <% if action_name != "show" %>
    <%= link_to "Show this price list", price_list, class: "rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
    <%= link_to 'Edit this price list', edit_price_list_path(price_list), class: "rounded-lg py-3 ml-2 px-5 bg-gray-100 inline-block font-medium" %>
    <hr class="mt-6">
  <% end %>
</div>
