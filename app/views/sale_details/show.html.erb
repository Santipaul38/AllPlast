<div class="mx-auto md:w-2/3 w-full flex">
  <div class="mx-auto contenedor2-div">
    <% if notice.present? %>
      <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block" id="notice"><%= notice %></p>
    <% end %>

    <%= render @sale_detail %>

    <%= link_to 'Editar', edit_sale_detail_path(@sale_detail), class: "mt-2 rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
    <div class="inline-block ml-2">
      <%= button_to '× Eliminar detalle de venta ×', sale_detail_path(@sale_detail), method: :delete, class: "mt-2 rounded-lg py-3 px-5 bg-red-500 font-medium" %>
    </div>
    <%= link_to '❮ Volver', sale_details_path, class: "ml-2 rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
  </div>
</div>
